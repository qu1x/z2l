if [ "$1" = revoke ]; then
	test -e Makefile && \
		make distclean
	rm -rf \
		README \
		aclocal.m4 \
		autom4te.cache \
		compile \
		config.guess \
		config.h \
		config.h.in \
		config.h.in~ \
		config.log \
		config.status \
		config.sub \
		configure \
		depcomp \
		INSTALL \
		install-sh \
		libtool \
		ltmain.sh \
		m4 \
		Makefile \
		Makefile.in \
		missing
else
	mkdir -p m4
	ln -sf README.md README
	autoreconf -i
fi
